    "devtools",
    "react",
    "render"
  ],
  "devDependencies": {
    "@babel/core": "*",
    "@babel/preset-env": "*",
    "@babel/preset-react": "*",
    "babel-jest": "*",
    "enzyme": "*",
    "enzyme-adapter-react-16": "*",
    "jest": "*",
    "react": "^16.4.0",
    "react-dom": "^16.4.0"
  },
  "main": "build/index.js",
  "scripts": {
    "build": "babel src/index.js --no-babelrc --presets es2015 --out-file build/index.js",
