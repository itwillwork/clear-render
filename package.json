    "test": "jest",
    "format": "prettier --single-quote --trailing-comma es5 --write \"src/**/*.js\""
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/src/__tests__/components/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/itwillwork/clear-render.git"
  }
